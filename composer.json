{
    "repositories" : [{
        "url": "https://packagist.org/",
        "type" : "composer"
    }],
    "name": "wildbit/postmark-php",
    "license": "MIT",
    "description": "The officially supported client for Postmark (http://postmarkapp.com)",
    "require": {
        "php": ">=5.4.0",
        "guzzlehttp/guzzle": "~5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "4.4.0"
    },
    "autoload": {
        "psr-0": {
            "Postmark\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "src/",
            "tests/"
        ]
    },
    "scripts": {
        "test": "phpunit"
    }
}