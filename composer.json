{
    "name": "wildbit/postmark-client",
    "license" : "MIT",
    "description": "The officially supported client for Postmark (http://postmarkapp.com)",
    "require": {
        "php": ">=5.3.0",
        "guzzlehttp/guzzle": "5.1.0"
    },
    "require-dev": {
    	"phpunit/phpunit": "4.4.0"
    },
    "autoload": {
        "psr-0": {
            "Postmark\\" : "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "src/",
            "tests/"
        ]
    },
    "scripts": {
        "test": "phpunit"
    }
}
