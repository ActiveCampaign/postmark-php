{
    "name": "gsteel/postmark-php",
    "license": "MIT",
    "description": "Postmark API Client Fork for PHP 8.1",
    "keywords": [
        "postmark",
        "email",
        "api-client"
    ],
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.99"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/package-versions-deprecated": true
        }
    },
    "replace": {
        "wildbit/postmark-php": "4.0.2"
    },
    "require": {
        "php": "~8.0 || ~8.1 || ~8.2",
        "ext-json": "*",
        "fig/http-message-util": "^1.1",
        "php-http/discovery": "^1.14.3",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^10.0.0",
        "laminas/laminas-diactoros": "^2.22.0",
        "php-http/curl-client": "^2.2.1",
        "php-http/mock-client": "^1.5",
        "phpunit/phpunit": "^9.5.26",
        "psalm/plugin-phpunit": "^0.18.3",
        "squizlabs/php_codesniffer": "^3.7.1",
        "symfony/options-resolver": "^5.3.7 || ^6",
        "vimeo/psalm": "^4.30.0"
    },
    "autoload": {
        "psr-4": {
            "Postmark\\": "src/Postmark/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Postmark\\Tests\\Unit\\": "tests/Unit/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
