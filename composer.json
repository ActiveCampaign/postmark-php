{
    "name": "wildbit/postmark-client",
    "license" : "MIT",
    "description": "The officially supported client for Postmark (http://postmarkapp.com)",
    "require": {
        "php": ">=5.3.0",
        "guzzle/guzzle": "3.9.2"
    },
    "require-dev": {
    	"phpunit/phpunit": "4.4.0",
        "phpdocumentor/phpdocumentor": "2.*"
    },
    "autoload": {
        "psr-0": {
            "Postmark\\" : "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "src/",
            "tests/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "document" : "phpdoc -d src -t docs"
    }
}